<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calculadora"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jahir.calculadora.calculadora"
    android:background="@android:color/darker_gray">

    <Button
        android:text="0"
        android:layout_width="125px"
        android:layout_height="80px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="37dp"
        android:id="@+id/button22"
        android:onClick="imprimir0" />

    <Button
        android:text="1"
        android:layout_width="125px"
        android:layout_height="80px"
        android:layout_above="@+id/button22"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/button25"
        android:onClick="imprimir1" />

    <Button
        android:text="4"
        android:layout_width="125px"
        android:layout_height="80px"
        android:layout_above="@+id/button25"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/button28"
        android:onClick="imprimir4" />

    <Button
        android:text="7"
        android:layout_width="125px"
        android:layout_height="80px"
        android:layout_above="@+id/button28"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/button31"
        android:onClick="imprimir7" />

    <Button
        android:text="9"
        android:layout_width="125px"
        android:layout_height="80px"
        android:layout_alignTop="@+id/button32"
        android:layout_alignRight="@+id/button30"
        android:layout_alignEnd="@+id/button30"
        android:id="@+id/button33"
        android:onClick="imprimir9" />

    <Button
        android:text="Del"
        android:layout_width="125px"
        android:layout_height="80px"
        android:layout_below="@+id/button23"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/button37" />

    <Button
        android:text="C"
        android:id="@+id/button34"
        android:layout_width="125px"
        android:layout_height="80px"
        android:layout_above="@+id/button31"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="Limpiar" />

    <Button
        android:text="/"
        android:id="@+id/button39"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_width="125px"
        android:layout_height="50px"
        android:onClick="Divi" />

    <Button
        android:text="6"
        android:layout_width="125px"
        android:layout_height="80px"
        android:id="@+id/button30"
        android:onClick="imprimir6"
        android:layout_above="@+id/button26"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="3"
        android:layout_width="125px"
        android:layout_height="80px"
        android:id="@+id/button27"
        android:onClick="imprimir3"
        android:layout_above="@+id/button23"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="="
        android:layout_width="125px"
        android:layout_height="80px"
        android:id="@+id/button24"
        android:elevation="1dp"
        android:layout_above="@+id/button39"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="resul" />

    <Button
        android:text="-"
        android:layout_width="125px"
        android:id="@+id/button36"
        android:layout_height="80px"
        android:layout_alignBaseline="@+id/button34"
        android:layout_alignBottom="@+id/button34"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="Resta" />

    <Button
        android:layout_width="125px"
        android:layout_height="80px"
        android:id="@+id/button38"
        android:text="X"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button23"
        android:onClick="Multi" />

    <Button
        android:text="."
        android:layout_width="125px"
        android:layout_height="80px"
        android:id="@+id/button23"
        android:minHeight="50dp"
        android:elevation="1dp"
        android:layout_alignBaseline="@+id/button22"
        android:layout_alignBottom="@+id/button22"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="2"
        android:layout_width="125px"
        android:layout_height="80px"
        android:id="@+id/button26"
        android:onClick="imprimir2"
        android:layout_alignBaseline="@+id/button25"
        android:layout_alignBottom="@+id/button25"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="5"
        android:layout_width="125px"
        android:layout_height="80px"
        android:id="@+id/button29"
        android:onClick="imprimir5"
        android:layout_alignBaseline="@+id/button28"
        android:layout_alignBottom="@+id/button28"
        android:layout_alignLeft="@+id/button26"
        android:layout_alignStart="@+id/button26" />

    <Button
        android:text="8"
        android:layout_width="125px"
        android:layout_height="80px"
        android:id="@+id/button32"
        android:onClick="imprimir8"
        android:layout_alignBaseline="@+id/button31"
        android:layout_alignBottom="@+id/button31"
        android:layout_alignLeft="@+id/button29"
        android:layout_alignStart="@+id/button29" />

    <Button
        android:text="+"
        android:layout_width="125px"
        android:id="@+id/button35"
        android:layout_height="80px"
        android:onClick="Suma"
        android:layout_alignBaseline="@+id/button34"
        android:layout_alignBottom="@+id/button34"
        android:layout_alignLeft="@+id/button32"
        android:layout_alignStart="@+id/button32" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="350px"
        android:layout_height="60px"
        android:background="@android:color/background_light"
        android:typeface="monospace"
        android:layout_above="@+id/button34"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="23dp" />

    <TextView
        android:layout_width="350px"
        android:layout_height="45px"
        android:typeface="monospace"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView2" />

</RelativeLayout>
